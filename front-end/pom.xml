        <springdoc-openapi-ui.version>1.5.12</springdoc-openapi-ui.version>
        <jstl.version>1.2</jstl.version>
        <gson.version>2.8.6</gson.version>
		<env.server.url>${env.ENV_JFSOL_SERVER_URL}</env.server.url>
		<env.server.user>${env.ENV_JFSOL_SERVER_USER}</env.server.user>
		<env.server.password>${env.ENV_JFSOL_SERVER_PASSWORD}</env.server.password>
    </properties>

    <profiles>
        <profile>
            <id>ci</id>
            <properties>
                <spring.profiles.active>ci</spring.profiles.active>
            </properties>
        </profile>
        <profile>
            <id>dev</id>
            <properties>
                <spring.profiles.active>dev</spring.profiles.active>
            </properties>
        </profile>
        <profile>
            <id>docker</id>
            <properties>
                <spring.profiles.active>docker</spring.profiles.active>
            </properties>
        </profile>
        <profile>
            <id>prod</id>
            <activation>
                <activeByDefault>true</activeByDefault>
            </activation>
            <properties>
                <spring.profiles.active>prod</spring.profiles.active>
            </properties>
        </profile>
    </profiles>

