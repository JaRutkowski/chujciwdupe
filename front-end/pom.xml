    <name>jfs-operations-lite-web</name>
    <description>jFeeSoft Operations Support App Lite - WEB</description>
    <packaging>war</packaging> <!-- from war to jar -->

    <properties>
        <java.version>21</java.version>
        <maven.compiler.source>21</maven.compiler.source>
        <maven.compiler.target>21</maven.compiler.target>
        <togglz-spring-boot-starter.version>3.1.2</togglz-spring-boot-starter.version>
        <togglz-console.version>3.3.3</togglz-console.version>
        <aspectjweaver.version>1.9.9.1</aspectjweaver.version>
